<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:background="@color/ocher"
android:layout_gravity="center"
    android:elevation="10dp"

    android:orientation="vertical"
  android:padding="10dp"
    tools:context=".CropDataTransferFromBuyer"
    >


    <Button
        android:id="@+id/negotiate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#6A994E"

        android:text="मोल-भाव करें"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView112" />

    <Button
        android:id="@+id/addtocart1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:backgroundTint="@color/olive"
        android:text="कार्ट में जोड़ें"
        android:textAlignment="center"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/negotiate"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/cropName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:text="Wheat"
        android:textAlignment="viewStart"
        android:textColor="@color/translucent1"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mediaViewPager"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="@+id/mediaViewPager"
        app:layout_constraintTop_toBottomOf="@+id/mediaViewPager" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:text="2000"
        android:textAlignment="viewStart"
        android:textColor="#6A994E"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cropName"
        app:layout_constraintTop_toBottomOf="@+id/cropName" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="उत्पाद इस पते पर वितरित किया जाएगा :"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="उत्पाद विवरण:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView37"
        app:layout_constraintTop_toBottomOf="@+id/textView37" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/mediaViewPager"
        android:layout_width="393dp"
        android:layout_height="283dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCornersImageView" />

    <TextView
        android:id="@+id/growingMethod"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="21dp"
        android:layout_marginStart="2dp"
        android:ellipsize="end"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:text="dhbfshjbf"

        android:textColor="@color/translucent1"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView116"
        app:layout_constraintStart_toEndOf="@+id/textView116"
        app:layout_constraintStart_toStartOf="@+id/amount"
        app:layout_constraintTop_toTopOf="@+id/textView116"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView113"
        android:layout_width="wrap_content"
        android:layout_height="19dp"

        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:text="उत्पाड का राज्य: "
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/textView40" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="4dp"

        android:gravity="center"
        android:inputType="textCapSentences"
        android:maxLines="1"

        android:text="madhya pradesh"
        android:textColor="@color/translucent1"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView113"
        app:layout_constraintStart_toEndOf="@+id/textView113"
        app:layout_constraintTop_toTopOf="@+id/textView113"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView116"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:text="उगाने की विधि:"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/textView112"
        app:layout_constraintEnd_toEndOf="@+id/textView115"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView115"
        app:layout_constraintTop_toTopOf="@+id/textView112"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cropType"
        android:layout_width="41dp"
        android:layout_height="21dp"
        android:layout_marginEnd="240dp"
        android:ellipsize="end"
        android:gravity="center"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:text="HD-196"

        android:textColor="@color/translucent1"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView112"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/state"
        app:layout_constraintTop_toTopOf="@+id/textView112"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignTop="@+id/textView115"
        android:layout_alignBottom="@+id/textView115"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:text="80 Quintal"

        android:textColor="@color/translucent1"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView115"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView115"
        app:layout_constraintTop_toTopOf="@+id/textView115"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView112"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:text="फसल की किस्म: "
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView113"
        app:layout_constraintStart_toStartOf="@+id/textView113"
        app:layout_constraintTop_toBottomOf="@+id/textView113" />

    <TextView
        android:id="@+id/textView115"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView116"
        android:layout_alignStart="@+id/textView116"
        android:layout_alignEnd="@+id/textView116"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:text="मात्रा क्विंटल में:"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/state"
        app:layout_constraintTop_toTopOf="@+id/state" />

</androidx.constraintlayout.widget.ConstraintLayout>