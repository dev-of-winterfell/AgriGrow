<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white1"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16sp">

        <ImageView
            android:id="@+id/ropImage"
            android:layout_width="139dp"
            android:layout_height="128dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"

            android:text="फसल का नाम: "
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/ropImage"
            app:layout_constraintTop_toTopOf="@+id/ropImage" />

        <TextView
            android:id="@+id/ropName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Crop Name"
            android:visibility="visible"

            android:textAlignment="viewStart"
            android:textColor="@color/translucent1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView22"
            app:layout_constraintStart_toEndOf="@id/textView22"
            app:layout_constraintTop_toTopOf="@+id/textView22"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="फसल की किस्म: "
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/ropImage"
            app:layout_constraintTop_toBottomOf="@id/textView22" />

        <TextView
            android:id="@+id/ropType"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Crop Type"
            android:visibility="visible"
            android:textAlignment="viewStart"
            android:textColor="@color/translucent1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView23"
            app:layout_constraintStart_toEndOf="@id/textView23"
            app:layout_constraintTop_toTopOf="@+id/textView23"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="मात्रा क्विंटल में: "
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/ropImage"
            app:layout_constraintTop_toBottomOf="@id/textView23" />

        <TextView
            android:id="@+id/ropquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Crop quantity"
            android:visibility="visible"
            android:textAlignment="viewStart"
            android:textColor="@color/translucent1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView24"
            app:layout_constraintStart_toEndOf="@id/textView24"
            app:layout_constraintTop_toTopOf="@+id/textView24"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="प्रति क्विंटल दर: "
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/ropImage"
            app:layout_constraintTop_toBottomOf="@id/textView24" />

        <EditText
            android:id="@+id/ropPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Price"
            android:textAlignment="viewStart"
            android:textColor="@color/translucent1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView25"
            app:layout_constraintStart_toEndOf="@id/textView25"
            app:layout_constraintTop_toTopOf="@+id/textView25"
            app:layout_constraintVertical_bias="0.363" />

        <Button
            android:id="@+id/sendnewPRICEtosellerfROMbUYER"
            android:backgroundTint="@color/olive"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="मोल-तोल के लिए कीमत भेजें"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.275"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ropImage"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/addtocart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:backgroundTint="@color/olive"
            android:textAlignment="center"
            android:textStyle="bold"

            android:text="कार्ट में जोड़ें"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sendnewPRICEtosellerfROMbUYER"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/sendnewPRICEtosellerfROMbUYER"
            app:layout_constraintTop_toBottomOf="@+id/sendnewPRICEtosellerfROMbUYER"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
