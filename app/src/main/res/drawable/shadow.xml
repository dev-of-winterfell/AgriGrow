<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Shadow color (semi-transparent black) -->
            <corners android:radius="8dp" /> <!-- Adjust this for rounded corners -->
        </shape>
    </item>

    <!-- Content Layer -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color for the content -->
            <corners android:radius="50dp" /> <!-- Same corner radius as the shadow -->
        </shape>
    </item>
</layer-list>
