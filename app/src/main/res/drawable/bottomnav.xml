<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state with a top line -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Background color -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/Darkocher" />
                </shape>
            </item>
            <!-- Top line -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/Brown" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state with a top line -->
    <item>
        <layer-list>
            <!-- Background color -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/Darkocher" />
                </shape>
            </item>
            <!-- Top line -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/Brown" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
